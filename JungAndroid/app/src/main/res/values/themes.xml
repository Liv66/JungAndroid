<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JungAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EC407A</item>
        <item name="colorPrimaryVariant">#EC407A</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- "?attr/selectableItemBackground"의 리플색상 설정     -->
        <item name="colorControlHighlight">#51EC40</item>
    </style>

    <style name="MyRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary </item>
        <item name="colorControlHighlight">@color/colorLightPink</item>
    </style>
    
    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorLightGray</item>
    </style>
</resources>